<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutError"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#95000000"
    android:forceDarkAllowed="false"
    android:gravity="center"
    android:orientation="vertical"
    android:theme="@style/Theme.AppCompat.NoActionBar">


    <LinearLayout
        android:id="@+id/reminder_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="center"
                android:text="Let's treat this simulation as a real life PC assembly and disassembly."
                android:textColor="@color/white" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/reminder_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:gravity="center"
            android:text="Reminder"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/open_sans_regular"
                android:text="In real life, make sure that you are wearing an anti-static wrist strap.\nIf none, please touch a near metal before touching a component."
                android:textColor="@color/white" />
        </LinearLayout>

        <com.zolad.zoominimageview.ZoomInImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/reminder_2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/reminder_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/open_sans_regular"
                android:text="For some 3D rendering reason, this simulation doesn't show the application of thermal paste into the CPU, please refer to the video below."
                android:textColor="@color/white" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">

            <VideoView
                android:id="@+id/reminder_3_video"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/reminder_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/open_sans_semibold"
            android:gravity="center"
            android:text="PC Specification"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/open_sans_regular"
                android:text="Motherboard:"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/open_sans_regular"
                android:text="Gigabyte B450 AORUS M"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/open_sans_regular"
                android:text="Processor:"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/open_sans_regular"
                android:text="Ryzen 5 3600"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/open_sans_regular"
                android:text="HDD:"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/open_sans_regular"
                android:text="WD 1TB"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/open_sans_regular"
                android:text="SSD:"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/open_sans_regular"
                android:text="Kingston 240 GB"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/open_sans_regular"
                android:text="RAM:"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/open_sans_regular"
                android:text="DDR4 4GB(4 pcs)"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/open_sans_regular"
                android:text="Videocard:"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/open_sans_regular"
                android:text="AMD Radeon™ RX 5700 XT Graphics"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/open_sans_regular"
                android:text="Power Supply:"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/open_sans_regular"
                android:text="Thermaltake TR2 S 600W 80+"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/simulation_reminder_ok"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:background="?android:attr/actionBarItemBackground"
            android:src="@drawable/simulation_next" />

        <View
            android:layout_width="100dp"
            android:layout_height="0dp" />

        <ImageView
            android:id="@+id/simulation_reminder_skip"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:background="?android:attr/actionBarItemBackground"
            android:src="@drawable/simulation_skip" />

    </LinearLayout>

</LinearLayout>
