<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutError"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#95000000"
    android:forceDarkAllowed="false"
    android:padding="20dp"
    android:theme="@style/Theme.AppCompat.NoActionBar">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/logo" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="Your Profile"
                        android:textColor="@color/black_primary"
                        android:textSize="22dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="right">

                    <ImageView
                        android:foreground="@drawable/ripple_2"
                        android:id="@+id/profile_close"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/feedback_close" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:background="@android:color/darker_gray" />
            <!-- Edit Profile!-->
            <LinearLayout
                android:id="@+id/profile_edit_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <!-- Username !-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Username:"
                        android:textColor="@color/black_primary"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp">

                        <TextView
                            android:id="@+id/profile_edit_username_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text=""
                            android:textColor="@color/black_primary"
                            android:textSize="20dp" />

                        <EditText
                            android:id="@+id/profile_edit_username_edit"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@android:color/holo_green_dark"
                            android:paddingLeft="10dp"
                            android:singleLine="true"
                            android:textColor="@color/black_primary"
                            android:textSize="18dp"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>
                <!-- Name !-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Name:"
                        android:textColor="@color/black_primary"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp">

                        <TextView
                            android:id="@+id/profile_edit_name_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text=""
                            android:textColor="@color/black_primary"
                            android:textSize="20dp" />

                        <EditText
                            android:id="@+id/profile_edit_name_edit"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@android:color/holo_green_dark"
                            android:paddingLeft="10dp"
                            android:textColor="@color/black_primary"
                            android:textSize="18dp"
                            android:visibility="gone" />

                    </LinearLayout>
                </LinearLayout>
                <!-- Email !-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Email:"
                        android:textColor="@color/black_primary"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp">

                        <TextView
                            android:id="@+id/profile_edit_email_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text=""
                            android:textColor="@color/black_primary"
                            android:textSize="20dp" />

                        <EditText
                            android:id="@+id/profile_edit_email_edit"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@android:color/holo_green_dark"
                            android:paddingLeft="10dp"
                            android:textColor="@color/black_primary"
                            android:textSize="18dp"
                            android:visibility="gone" />

                    </LinearLayout>
                </LinearLayout>
                <!-- Password !-->
                <LinearLayout
                    android:id="@+id/profile_edit_password_layout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Password"
                        android:textColor="@color/black_primary"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/profile_edit_password"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:backgroundTint="@android:color/holo_green_dark"
                        android:hint="Password for verification"
                        android:inputType="textPassword"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black_primary"
                        android:textColorHint="@android:color/darker_gray"
                        android:textSize="18dp" />
                </LinearLayout>
                <!-- Edit and Password !-->
                <LinearLayout
                    android:id="@+id/profile_edit_profile_buttons_layout_1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:foreground="@drawable/ripple_1"
                        android:id="@+id/profile_edit_editprofile"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Edit Profile"
                        android:textColor="@color/main_red"
                        android:textSize="20dp" />

                    <TextView
                        android:foreground="@drawable/ripple_1"
                        android:id="@+id/profile_edit_changepassword"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="Change Password"
                        android:textColor="@color/main_red"
                        android:textSize="20dp" />
                </LinearLayout>
                <!-- Cancel and Submit !-->
                <LinearLayout
                    android:id="@+id/profile_edit_profile_buttons_layout_2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/profile_cancel"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:textColor="@color/main_red"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/profile_submit"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="Submit"
                        android:textColor="@color/main_red"
                        android:textSize="20dp" />
                </LinearLayout>
            </LinearLayout>
            <!-- Change Password!-->
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/profile_password_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <!-- Old !-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Old Password:"
                        android:textColor="@color/black_primary"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp">

                        <EditText
                            android:id="@+id/profile_password_old"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@android:color/holo_green_dark"
                            android:inputType="textPassword"
                            android:textColor="@color/black_primary"
                            android:textSize="18dp" />

                    </LinearLayout>

                </LinearLayout>
                <!-- Password !-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="New Password:"
                        android:textColor="@color/black_primary"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp">

                        <EditText
                            android:id="@+id/profile_password_new"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@android:color/holo_green_dark"
                            android:inputType="textPassword"
                            android:textColor="@color/black_primary"
                            android:textSize="18dp" />

                    </LinearLayout>
                </LinearLayout>
                <!-- Confirm !-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Confirm New Password:"
                        android:textColor="@color/black_primary"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp">

                        <EditText
                            android:id="@+id/profile_password_confirm"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@android:color/holo_green_dark"
                            android:inputType="textPassword"
                            android:textColor="@color/black_primary"
                            android:textSize="18dp" />

                    </LinearLayout>
                </LinearLayout>
                <!-- Cancel and Submit !-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:foreground="@drawable/ripple_1"
                        android:id="@+id/profile_password_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:textColor="@color/main_red"
                        android:textSize="20dp" />

                    <TextView
                        android:foreground="@drawable/ripple_1"
                        android:id="@+id/profile_password_submit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="Submit"
                        android:textColor="@color/main_red"
                        android:textSize="20dp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:background="@android:color/darker_gray" />

        </LinearLayout>

        <!--Loading Bar-->
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/profile_loading"
            android:gravity="center"
            android:clickable="true"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:background="@drawable/loading_background">

                <ProgressBar
                    android:indeterminateTint="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minWidth="60dp"
                    android:minHeight="60dp" />
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>
</LinearLayout>
