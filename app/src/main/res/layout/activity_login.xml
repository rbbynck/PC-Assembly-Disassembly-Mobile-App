<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:forceDarkAllowed="false"
    android:orientation="vertical"
    tools:context=".Login_Register">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp">

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:background="@color/white"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <!--Login Layout-->
                <LinearLayout
                    android:id="@+id/login_login_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="40dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="40dp">

                    <EditText
                        android:id="@+id/login_login_username"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@android:color/darker_gray"
                        android:gravity="bottom"
                        android:hint="Username"
                        android:textColor="@color/black_primary"
                        android:textColorHint="@android:color/darker_gray"
                        android:textSize="15dp" />


                    <EditText
                        android:id="@+id/login_login_password"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@android:color/darker_gray"
                        android:gravity="bottom"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:textColor="@color/black_primary"
                        android:textColorHint="@android:color/darker_gray"
                        android:textSize="15dp" />
                </LinearLayout>
                <!--Forgot Password (Email Input) Layout-->
                <LinearLayout
                    android:id="@+id/login_forgot_email_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="40dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="40dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@android:color/darker_gray"
                        android:gravity="center"
                        android:hint="Please enter your email"
                        android:textColor="@color/black_primary"
                        android:textColorHint="@android:color/black"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/login_forgot_email"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@android:color/darker_gray"
                        android:gravity="bottom"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/black_primary"
                        android:textColorHint="@android:color/darker_gray"
                        android:textSize="15dp" />
                </LinearLayout>
                <!--Forgot Password (Code Input) Layout-->
                <LinearLayout
                    android:id="@+id/login_forgot_code_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="40dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="40dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@android:color/darker_gray"
                        android:gravity="center"
                        android:hint="We've sent a code in your email"
                        android:textColor="@color/black_primary"
                        android:textColorHint="@android:color/black"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/login_forgot_code"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@android:color/darker_gray"
                        android:gravity="bottom"
                        android:hint="Code"
                        android:inputType="number"
                        android:textColor="@color/black_primary"
                        android:textColorHint="@android:color/darker_gray"
                        android:textSize="15dp" />
                </LinearLayout>
                <!--Forgot Password (New Password Input) Layout-->
                <LinearLayout
                    android:id="@+id/login_newpassword_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="40dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="40dp"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/login_newpassword_password"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@android:color/darker_gray"
                        android:gravity="bottom"
                        android:hint="New Password"
                        android:inputType="textPassword"
                        android:textColor="@color/black_primary"
                        android:textColorHint="@android:color/darker_gray"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/login_newpassword_confirm"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@android:color/darker_gray"
                        android:gravity="bottom"
                        android:hint="Confirm Password"
                        android:inputType="textPassword"
                        android:textColor="@color/black_primary"
                        android:textColorHint="@android:color/darker_gray"
                        android:textSize="15dp" />
                </LinearLayout>
                <!--Register Layout-->
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="40dp"
                    android:fillViewport="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <!--Register Layout-->
                        <LinearLayout
                            android:id="@+id/login_register_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:gravity="center_horizontal|bottom"
                                android:text="Scroll down to see the other fields."
                                android:textColor="@android:color/darker_gray" />

                            <EditText
                                android:id="@+id/login_register_name"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:backgroundTint="@android:color/darker_gray"
                                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                                android:gravity="bottom"
                                android:hint="Name"
                                android:inputType="text"
                                android:textColor="@color/black_primary"
                                android:textColorHint="@android:color/darker_gray"
                                android:textSize="15dp" />

                            <EditText
                                android:id="@+id/login_register_email"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:backgroundTint="@android:color/darker_gray"
                                android:gravity="bottom"
                                android:hint="Email"
                                android:inputType="textEmailAddress"
                                android:textColor="@color/black_primary"
                                android:textColorHint="@android:color/darker_gray"
                                android:textSize="15dp" />

                            <EditText
                                android:id="@+id/login_register_classcode"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:backgroundTint="@android:color/darker_gray"
                                android:gravity="bottom"
                                android:hint="Class Code (Enter 1 if you don't have class)"
                                android:maxLength="8"
                                android:textColor="@color/black_primary"
                                android:textColorHint="@android:color/darker_gray"
                                android:textSize="15dp" />

                            <EditText
                                android:id="@+id/login_register_username"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:backgroundTint="@android:color/darker_gray"
                                android:gravity="bottom"
                                android:hint="Username"
                                android:textColor="@color/black_primary"
                                android:textColorHint="@android:color/darker_gray"
                                android:textSize="15dp" />

                            <EditText
                                android:id="@+id/login_register_password"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:backgroundTint="@android:color/darker_gray"
                                android:gravity="bottom"
                                android:hint="Password"
                                android:inputType="textPassword"
                                android:textColor="@color/black_primary"
                                android:textColorHint="@android:color/darker_gray"
                                android:textSize="15dp" />

                            <EditText
                                android:id="@+id/login_register_confirm"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:backgroundTint="@android:color/darker_gray"
                                android:gravity="bottom"
                                android:hint="Confirm Password"
                                android:inputType="textPassword"
                                android:textColor="@color/black_primary"
                                android:textColorHint="@android:color/darker_gray"
                                android:textSize="15dp" />

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <CheckBox
                                    android:id="@+id/login_register_privacy"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:buttonTint="@android:color/darker_gray"
                                    android:textSize="15dp" />

                                <TextView
                                    android:id="@+id/login_register_privacy_link"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/open_sans_regular"
                                    android:text="@string/privacy_policy"
                                    android:textColor="@color/black_primary"
                                    android:textSize="15dp" />
                            </LinearLayout>

                        </LinearLayout>

                        <!--Register Verification (Code Input) Layout-->
                        <LinearLayout
                            android:id="@+id/login_register_verification_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingLeft="20dp"
                            android:paddingTop="20dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="20dp"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:backgroundTint="@android:color/darker_gray"
                                android:gravity="center"
                                android:hint="We've sent a code in your email"
                                android:textColor="@color/black_primary"
                                android:textColorHint="@android:color/black"
                                android:textSize="15dp" />

                            <EditText
                                android:id="@+id/login_register_verification_code"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:backgroundTint="@android:color/darker_gray"
                                android:gravity="bottom"
                                android:hint="Code"
                                android:inputType="number"
                                android:textColor="@color/black_primary"
                                android:textColorHint="@android:color/darker_gray"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/login_register_verification_back"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Go back"
                                android:textColor="#79c8de"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.664"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
                                app:layout_constraintVertical_bias="0.0" />
                        </LinearLayout>

                    </LinearLayout>
                </ScrollView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/login_register_background_button"
                android:foreground="@drawable/ripple_4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/linearLayout2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <TextView
                    android:id="@+id/login_switch_button"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="Register"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/login_forgot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="@drawable/ripple_1"
                android:text="Forgot Password?"
                android:textColor="#79c8de"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.664"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
                app:layout_constraintVertical_bias="0.0" />

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/login_login_background_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

                <TextView
                    android:id="@+id/login_submit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:foreground="@drawable/ripple_1"
                    android:gravity="center"
                    android:text="LOGIN"
                    android:textColor="#b2b2b2"
                    android:textSize="18dp" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--Loading Bar-->
        <LinearLayout
            android:id="@+id/login_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:gravity="center"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/loading_background"
                android:gravity="center">

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:indeterminateTint="@color/white"
                    android:minWidth="60dp"
                    android:minHeight="60dp" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>