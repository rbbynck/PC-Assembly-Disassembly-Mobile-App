<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:forceDarkAllowed="false"
    tools:context=".Fragment_Menu_Challenge_BuildPC">

    <LinearLayout
        android:id="@+id/challenge_buildpc_question"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/quiz_background"
        android:orientation="vertical"
        android:paddingLeft="100dp"
        android:paddingTop="20dp"
        android:paddingRight="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/quiz_result_background"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:src="@drawable/quiz_result" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Build PC Challenge!"
                        android:textColor="@color/black_primary"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Build a PC for 3D Modeling."
                        android:textColor="@color/black_primary"
                        android:textSize="15dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/challenge_buildpc_question_start"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:autoSizeTextType="uniform"
                    android:background="@drawable/quiz_next_background"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="START"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/challenge_buildpc_components"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/quiz_background"
        android:orientation="vertical"
        android:paddingLeft="100dp"
        android:paddingTop="20dp"
        android:paddingRight="100dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/challenge_buildpc_components_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Case"
                    android:textSize="30dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <ScrollView
                android:id="@+id/challenge_buildpc_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="false"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--Option 1-->
                    <LinearLayout
                        android:id="@+id/challenge_buildpc_components_components_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="5"
                            android:gravity="center">

                            <FrameLayout
                                android:id="@+id/challenge_buildpc_components_option_1"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_weight="6"
                                android:padding="5dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:src="@drawable/quiz_letter_background" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:autoSizeTextType="uniform"
                                    android:gravity="center"
                                    android:text="A"
                                    android:textColor="@color/white" />
                            </FrameLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="200dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/challenge_buildpc_components_picture_1"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:padding="20dp"
                                android:src="@drawable/challenge_case_1" />

                            <TextView
                                android:id="@+id/challenge_buildpc_components_name_1"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="4"
                                android:gravity="center"
                                android:text="Corsair 110R Tempered Glass Mid-Tower ATX Case"
                                android:textColor="@color/black_primary"
                                android:textStyle="bold|italic" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="5"
                            android:gravity="center"
                            android:orientation="vertical">

                            <FrameLayout
                                android:id="@+id/challenge_buildpc_components_cancel_1"
                                android:layout_width="fill_parent"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:padding="5dp"
                                android:visibility="gone">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:src="@drawable/quiz_cancel" />
                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/challenge_buildpc_components_info_1"
                                android:layout_width="fill_parent"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:padding="5dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_baseline_info" />
                            </FrameLayout>

                        </LinearLayout>

                    </LinearLayout>
                    <!--Option 2-->
                    <LinearLayout
                        android:id="@+id/challenge_buildpc_components_components_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="5"
                            android:gravity="center">

                            <FrameLayout
                                android:id="@+id/challenge_buildpc_components_option_2"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_weight="6"
                                android:padding="5dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:src="@drawable/quiz_letter_background" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:autoSizeTextType="uniform"
                                    android:gravity="center"
                                    android:text="B"
                                    android:textColor="@color/white" />
                            </FrameLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="200dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/challenge_buildpc_components_picture_2"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:padding="20dp"
                                android:src="@drawable/challenge_case_2" />

                            <TextView
                                android:id="@+id/challenge_buildpc_components_name_2"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="4"
                                android:gravity="center"
                                android:text="Corsair 110R Tempered Glass Mid-Tower ATX Case"
                                android:textColor="@color/black_primary"
                                android:textStyle="bold|italic" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="5"
                            android:gravity="center"
                            android:orientation="vertical">

                            <FrameLayout
                                android:id="@+id/challenge_buildpc_components_cancel_2"
                                android:layout_width="fill_parent"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:padding="5dp"
                                android:visibility="gone">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:src="@drawable/quiz_cancel" />
                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/challenge_buildpc_components_info_2"
                                android:layout_width="fill_parent"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:padding="5dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_baseline_info" />
                            </FrameLayout>


                        </LinearLayout>

                    </LinearLayout>
                    <!--Option 3-->
                    <LinearLayout
                        android:id="@+id/challenge_buildpc_components_components_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="5"
                            android:gravity="center">

                            <FrameLayout
                                android:id="@+id/challenge_buildpc_components_option_3"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_weight="6"
                                android:padding="5dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:src="@drawable/quiz_letter_background" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:autoSizeTextType="uniform"
                                    android:gravity="center"
                                    android:text="C"
                                    android:textColor="@color/white" />
                            </FrameLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="200dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/challenge_buildpc_components_picture_3"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:padding="20dp"
                                android:src="@drawable/challenge_case_3" />

                            <TextView
                                android:id="@+id/challenge_buildpc_components_name_3"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="4"
                                android:gravity="center"
                                android:text="Corsair 110R Tempered Glass Mid-Tower ATX Case"
                                android:textColor="@color/black_primary"
                                android:textStyle="bold|italic" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="5"
                            android:gravity="center"
                            android:orientation="vertical">

                            <FrameLayout
                                android:id="@+id/challenge_buildpc_components_cancel_3"
                                android:layout_width="fill_parent"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:padding="5dp"
                                android:visibility="gone">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:src="@drawable/quiz_cancel" />
                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/challenge_buildpc_components_info_3"
                                android:layout_width="fill_parent"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:padding="5dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_baseline_info" />
                            </FrameLayout>


                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/challenge_buildpc_components_next"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="50dp"
                        android:autoSizeTextType="uniform"
                        android:background="@drawable/quiz_next_background"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Next"
                        android:textColor="@color/white" />

                </LinearLayout>

            </ScrollView>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/challenge_buildpc_done"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/quiz_background"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingLeft="100dp"
        android:paddingTop="20dp"
        android:paddingRight="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/quiz_result_background"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/challenge_buildpc_done_percentage"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Awesome!"
                        android:textColor="@color/black_primary"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fillViewport="false">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/challenge_buildpc_done_specs"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="20dp"
                                android:autoSizeTextType="uniform"
                                android:text="You've Completed the test."
                                android:textAlignment="viewStart"
                                android:textColor="@color/black_primary"
                                android:textSize="12dp"
                                tools:ignore="RtlCompat" />
                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/challenge_buildpc_done_tryagain"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:autoSizeTextType="uniform"
                    android:background="@drawable/quiz_next_background"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Try Again"
                    android:textColor="@color/white" />

                <View
                    android:layout_width="50dp"
                    android:layout_height="match_parent" />


                <TextView
                    android:id="@+id/challenge_buildpc_done_done"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:autoSizeTextType="uniform"
                    android:background="@drawable/quiz_next_background"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Done"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

